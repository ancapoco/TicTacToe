<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EAE4D3">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        >
        <EditText
            android:id="@+id/text_input1"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginTop="100dp"
            android:inputType="text"
            android:background="@drawable/edit_text_background"
            android:layout_marginRight="20dp"
            android:textSize="50dp"            />

        <EditText
            android:id="@+id/text_input2"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginTop="100dp"
            android:inputType="text"
            android:background="@drawable/edit_text_background"
            android:layout_marginRight="20dp"
            android:textSize="50dp"       />

        <EditText
            android:id="@+id/text_input3"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginTop="100dp"
            android:inputType="text"
            android:background="@drawable/edit_text_background"
            android:textSize="50dp"                   />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"

        >
        <EditText
            android:id="@+id/text_input4"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginTop="80dp"
            android:inputType="text"
            android:background="@drawable/edit_text_background"
            android:textSize="50dp"
            android:layout_marginRight="20dp"/>

        <EditText
            android:id="@+id/text_input5"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginTop="80dp"
            android:inputType="text"
            android:layout_marginRight="20dp"
            android:background="@drawable/edit_text_background"
            android:textSize="50dp"  />

        <EditText
            android:id="@+id/text_input6"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginTop="80dp"
            android:inputType="text"
            android:background="@drawable/edit_text_background"
            android:textSize="50dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        >

        <EditText
            android:id="@+id/text_input7"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginTop="80dp"
            android:inputType="text"
            android:background="@drawable/edit_text_background"
            android:textSize="50dp"
            android:layout_marginRight="20dp"/>

        <EditText
            android:id="@+id/text_input8"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginTop="80dp"
            android:inputType="text"
            android:background="@drawable/edit_text_background"
            android:textSize="50dp"
            android:layout_marginRight="20dp"/>

        <EditText
            android:id="@+id/text_input9"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginTop="80dp"
            android:inputType="text"
            android:background="@drawable/edit_text_background"
            android:textSize="50dp"
            />
    </LinearLayout>

</LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>